<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.graps.m3daaty.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_200">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:maxEms="8"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:textColor="@color/dark_color"
            android:text="@string/search_for_your_recipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/search_rounded_view"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/search"
            app:layout_constraintEnd_toEndOf="@+id/search_title"
            app:layout_constraintStart_toStartOf="@+id/search_title"
            app:layout_constraintTop_toBottomOf="@+id/search_title" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            app:lottie_rawRes="@raw/recipe_search_lottie"
            app:lottie_loop="true"
            android:onTextChanged="@{viewModel.flag}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_search" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>