<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.graps.m3daaty.model.domain.randomRecipes.Recipe" />
        <variable
            name="listener"
            type="com.graps.m3daaty.ui.home.IRandomInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="110dp"
        app:cardCornerRadius="8dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="@{() -> listener.onTodayRecipeListener(item)}"
        android:background="@color/gray_200"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                imageUrl="@{item.image}"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="43dp"
                android:alpha="0.6"
                android:background="@drawable/home_rounded_view"
                app:layout_constraintBottom_toBottomOf="@+id/image_food"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:text="@{item.title}"
                android:textColor="@color/black"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/text_medium"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2"
                tools:text="Hummos" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>