<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/search_color"
    app:cardCornerRadius="18dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/recipe_photo"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars[3]"
            android:contentDescription="@string/string_recipe_image"
            />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="148sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/text_large"
            android:textColor="@color/dark_color"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@id/recipe_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="I told you long ago on the road, I got what are waiting for"
            />

        <TextView
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/dark_400_color"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="18dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/recipe_title"
            app:layout_constraintTop_toBottomOf="@id/recipe_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Question How many faking they streams? A lot Getting they plays from machines? A lot"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>