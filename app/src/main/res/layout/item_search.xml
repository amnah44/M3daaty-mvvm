<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.graps.m3daaty.model.domain.recipeSearchResponse.Result" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/item_search_width"
        android:layout_height="@dimen/item_search_height"
        app:cardCornerRadius="@dimen/item_search_radius"
        android:background="@color/gray_200"
        android:layout_margin="@dimen/margin_medium"
        android:padding="@dimen/padding_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_large"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:ems="8"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="@color/black"
                android:text="@{item.title}"
                tools:text="Food"
                android:textSize="@dimen/text_medium"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/image_food"
                app:layout_constraintStart_toStartOf="@+id/image_food" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>